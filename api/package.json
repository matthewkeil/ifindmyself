{
  "name": "ifindmyself",
  "version": "0.0.0",
  "description": "graphql api for ifindmyself",
  "repository": {
    "type": "heroku",
    "url": "git+https://git.heroku.com/ifindmyself-api.git"
  },
  "bugs": {
    "url": "https://github.com/matthewkeil/typescript-react-redux-blog/issues"
  },
  "author": "Matthew Keil",
  "homepage": "https://www.ifindmyself.com",
  "license": "MIT",
  "keywords": [
    "typescript",
    "node",
    "express",
    "graphql",
    "apollo",
    "neo4j",
    "mongodb",
    "typegoose",
    "mocha",
    "chai",
    "sinon"
  ],
  "scripts": {
    "clean:build": "rimraf build && mkdir build",
    "clean:results": "rimraf test/results && mkdir test/results",
    "serve": "nodemon build",
    "tsc:dev": "node_modules/typescript/bin/tsc --project config/tsconfig.dev.json",
    "tsc:once": "npm run clean:build && npm run tsc:dev",
    "tsc:watch": "npm run tsc:dev -- -w",
    "mocha": "node_modules/.bin/mocha --require ts-node/register --recursive src/**/*.spec.ts",
    "mocha:once": "npm run tsc:once && npm run mocha -- --reporter mochawesome --reporter-options reportDir=test/results/$(date +%F)/$(date +%T),reportFilename=index",
    "mocha:watch": "npm run mocha -- --watch --reporter min",
    "prestart": "npm run mocha:once",
    "start": "npm run tsc:watch & npm run mocha:watch & npm run serve",
    "test": "npm run mocha:once",
    "prod:push": "git push heroku master"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.0",
    "mongodb": "^3.0.5",
    "mongoose": "^5.1.6",
    "morgan": "^1.9.0",
    "neo4j-driver": "^1.6.1",
    "nodemon": "^1.17.2",
    "reflect-metadata": "^0.1.12",
    "shortid": "^2.2.8",
    "typegoose": "^5.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/compression": "0.0.36",
    "@types/connect-mongo": "0.0.37",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/graphql": "^0.13.1",
    "@types/helmet": "0.0.37",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mocha": "^5.0.0",
    "@types/mongodb": "^3.0.21",
    "@types/mongoose": "^5.0.18",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.1",
    "@types/shortid": "0.0.29",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "mochawesome": "^3.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.8",
    "ts-node": "^6.1.1",
    "typescript": "^2.8.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "delay": 1000,
    "watch": ".build"
  }
}
